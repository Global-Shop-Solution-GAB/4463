	F.Intrinsic.String.Replace(V.Local.sMultLinks,"*!*","','",V.Local.sMultLinks)
	F.Intrinsic.String.Build("Select Convert(0,SQL_BIT) as 'Select',LINK_ID,LTrim(Rtrim(PATH))+LTrim(Rtrim(FILE)) as FILEFQN from ATG_DOC_ASSOC where LINK_ID in ('{0}')",V.Local.sMultLinks,V.Local.sSQL)
	
