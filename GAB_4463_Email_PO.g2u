	F.Data.DataTable.CreateFromSQL("dtPOLines","conts",V.Local.sSQL,True)
	F.Data.DataTable.AddColumn("dtPOLines","PO_LINE(S)","String")
	F.Data.DataTable.AddColumn("dtPOLines","LINK_ID","Long")
	
	F.Intrinsic.Control.For(V.Local.iCnt,V.DataTable.dtPOLines.RowCount--,0,-1)
